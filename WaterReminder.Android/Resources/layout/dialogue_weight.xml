<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorTransparent"
	android:padding="10dp">
	<LinearLayout
		android:background="@android:color/white"
		android:layout_centerInParent="true"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/weight"
			style="@style/SettingSubTitle"/>
		<View
			android:layout_width="wrap_content"
			android:layout_height="1dp"
			android:layout_marginVertical="10dp"
			android:background="@color/colorPrimary"
			android:text="@string/title_setting"
			style="@style/SettingSubTitle"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/rounded_border"
			android:padding="2dp">
			<MvvmCross.Platforms.Android.Binding.Views.MvxSpinner
				android:id="@+id/spinnerNation"
				android:background="@drawable/spinner_down_arrow"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:textColor="#A3000000"
				android:textSize="16sp"
				android:paddingStart="12dp"
				android:paddingBottom="5dp"
				android:fontFamily="@font/sourcesanspro_regular"
				app:MvxItemTemplate="@layout/spinner_item"
				app:MvxDropDownItemTemplate="@layout/spinner_drop_down_item"
				app:MvxBind="ItemsSource WeightList;SelectedItem SelectedWeight;"/>
		</FrameLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:orientation="horizontal">
			<TextView
				android:gravity="center"
				android:layout_width="80dp"
				android:layout_height="60dp"
				style="@style/SettingSubMenu"
				android:text="@string/title_cancel"
				app:MvxBind="Click CloseCommand"/>
			<TextView
				android:gravity="center"
				android:layout_width="60dp"
				android:layout_height="60dp"
				style="@style/SettingSubMenu"
				android:textColor="@color/colorAccent"
				android:text="@string/title_ok"
				app:MvxBind="Click CloseCommand,CommandParameter=true"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
