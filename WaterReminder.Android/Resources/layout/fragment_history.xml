<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	android:paddingHorizontal="10dp">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/title_history"
		android:layout_gravity="center_horizontal"
		style="@style/PageTitle"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<!--Drink water report-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAllCaps="false"
					android:layout_marginBottom="10dp"
					android:text="@string/drink_water_report"
					style="@style/SettingSubTitle"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:orientation="horizontal">
					<androidx.appcompat.widget.AppCompatImageView
						android:src="@drawable/rounded_circle"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:layout_centerVertical="true"
						android:tint="@android:color/holo_green_dark"
						android:text="@string/title_setting"
						style="@style/SettingSubTitle"/>
					<TextView
						android:layout_marginStart="20dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/weekly_average"
						android:layout_alignParentStart="true"
						style="@style/SettingSubMenu"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="2400 ml/day"
						android:layout_alignParentEnd="true"
						style="@style/SelectedValue"/>
				</RelativeLayout>
				<View
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:layout_marginVertical="10dp"
					android:background="@color/colorDivider"
					android:text="@string/title_setting"
					style="@style/SettingSubTitle"/>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:orientation="horizontal">
					<androidx.appcompat.widget.AppCompatImageView
						android:src="@drawable/rounded_circle"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:layout_centerVertical="true"
						android:tint="@android:color/holo_blue_dark"
						android:text="@string/title_setting"
						style="@style/SettingSubTitle"/>
					<TextView
						android:layout_marginStart="20dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/monthly_average"
						android:layout_alignParentStart="true"
						style="@style/SettingSubMenu"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@1200ml/day"
						android:layout_alignParentEnd="true"
						style="@style/SelectedValue"/>
				</RelativeLayout>
				<View
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:layout_marginVertical="10dp"
					android:background="@color/colorDivider"
					android:text="@string/title_setting"
					style="@style/SettingSubTitle"/>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:orientation="horizontal">
					<androidx.appcompat.widget.AppCompatImageView
						android:src="@drawable/rounded_circle"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:layout_centerVertical="true"
						android:tint="@android:color/holo_orange_dark"
						android:text="@string/title_setting"
						style="@style/SettingSubTitle"/>
					<TextView
						android:layout_marginStart="20dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/average_completion"
						android:layout_alignParentStart="true"
						style="@style/SettingSubMenu"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="40%"
						android:layout_alignParentEnd="true"
						style="@style/SelectedValue"/>
				</RelativeLayout>
				<View
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:layout_marginVertical="10dp"
					android:background="@color/colorDivider"
					android:text="@string/title_setting"
					style="@style/SettingSubTitle"/>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:orientation="horizontal">
					<androidx.appcompat.widget.AppCompatImageView
						android:src="@drawable/rounded_circle"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:layout_centerVertical="true"
						android:tint="@android:color/holo_red_dark"
						android:text="@string/title_setting"
						style="@style/SettingSubTitle"/>
					<TextView
						android:layout_marginStart="20dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drink_frequency"
						android:layout_alignParentStart="true"
						style="@style/SettingSubMenu"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="4 times/day"
						android:layout_alignParentEnd="true"
						style="@style/SelectedValue"/>
				</RelativeLayout>
				<View
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:layout_marginVertical="10dp"
					android:background="@color/colorDivider"
					android:text="@string/title_setting"
					style="@style/SettingSubTitle"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
