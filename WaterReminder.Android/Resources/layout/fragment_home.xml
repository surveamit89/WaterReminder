<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingHorizontal="10dp"
	android:background="@android:color/white">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/app_name_full"
		style="@style/PageTitle"/>
	<ScrollView
		android:scrollbars="none"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginEnd="80dp">
					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="80dp"
						android:layout_height="80dp"
						android:src="@drawable/drop"/>
					<TextView
						android:paddingVertical="10dp"
						android:gravity="center"
						android:background="@drawable/rounded_border"
						android:backgroundTint="@color/colorAccentLight"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/home_message"
						android:textSize="16dp"
						style="@style/SettingSubMenu"
						app:MvxBind="Text HomeTip"/>
				</LinearLayout>
				<LinearLayout
					android:layout_alignParentEnd="true"
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					app:MvxBind="Click MoreTipsCommand">
					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="wrap_content"
						android:layout_height="50dp"
						android:src="@drawable/tips"
						android:tint="#F39C12"/>
					<TextView
						android:layout_gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="@string/more_tips"
						android:textSize="12dp"
						android:textColor="?android:attr/colorAccent"
						style="@style/SettingSubMenu"/>
				</LinearLayout>
			</RelativeLayout>
			<RelativeLayout
				android:layout_marginTop="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<RelativeLayout
					android:layout_centerInParent="true"
					android:background="@drawable/rounded_circle"
					android:layout_width="280dp"
					android:layout_height="280dp">
					<LinearLayout
						android:layout_centerInParent="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<LinearLayout
							android:layout_gravity="center_horizontal"
							android:layout_centerInParent="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<TextView
								android:layout_gravity="center_horizontal"
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:text="2400"
								android:textSize="14dp"
								android:textColor="@color/colorAccent"
								style="@style/SettingSubMenu"
								app:MvxBind="Text IntakeWater"/>
							<TextView
								android:layout_gravity="center_horizontal"
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:text="/2990 ml"
								android:textSize="14dp"
								style="@style/SettingSubMenu"
								app:MvxBind="Text DisplayTotalIntakeWater"/>
						</LinearLayout>

						<TextView
							android:layout_gravity="center_horizontal"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:text="@string/daily_drink_target"
							android:textSize="14dp"
							style="@style/SettingSubMenu"/>
					</LinearLayout>
					<LinearLayout
						android:background="@drawable/rounded_half_circle"
						android:backgroundTint="#D6EAF8"
						android:layout_alignParentBottom="true"
						android:layout_centerHorizontal="true"
						android:layout_width="120dp"
						android:layout_height="60dp"
						android:orientation="vertical"
						android:paddingVertical="5dp"
						app:MvxBind="Click DrunkWaterCommand">
						<TextView
							android:layout_gravity="center_horizontal"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="300 ml"
							android:textSize="14dp"
							style="@style/SettingSubMenu"
							app:MvxBind="Text DisplaySelectedQuantityWater"/>
						<androidx.appcompat.widget.AppCompatImageView
							android:layout_gravity="center_horizontal"
							android:layout_width="30dp"
							android:layout_height="25dp"
							android:src="@drawable/water_glass"
							app:MvxBind="Click DrunkWaterCommand"/>
					</LinearLayout>
				</RelativeLayout>
				<FrameLayout
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/rounded_circle"
					android:layout_alignParentBottom="true"
					android:layout_alignParentEnd="true">
					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="wrap_content"
						android:layout_height="30dp"
						android:layout_margin="10dp"
						android:src="@drawable/water_glass"/>
				</FrameLayout>
			</RelativeLayout>
			<LinearLayout
				android:layout_gravity="center_horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingTop="5dp">
				<androidx.appcompat.widget.AppCompatImageView
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:src="@drawable/up_arrow"/>
				<TextView
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_confirm_desc"
					android:textSize="14dp"
					style="@style/SettingSubMenu"/>
			</LinearLayout>
			<LinearLayout
				android:layout_marginTop="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/todays_record"
					android:textAllCaps="false"
					style="@style/SettingSubTitle"/>
				<View
					android:visibility="gone"
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:layout_marginVertical="10dp"
					android:background="@color/colorPrimary"
					android:text="@string/title_setting"
					style="@style/SettingSubTitle"/>
				<LinearLayout
					android:background="@drawable/border"
					android:padding="10dp"
					android:layout_marginTop="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="5:00 PM (Pending)"
							android:layout_alignParentStart="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/holo_red_dark"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="300 ml"
							android:layout_alignParentEnd="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/holo_red_dark"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="4:30 PM (Next Time)"
							android:layout_alignParentStart="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/holo_red_dark"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="300 ml"
							android:layout_alignParentEnd="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/holo_red_dark"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="4:00 PM (Done)"
							android:layout_alignParentStart="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/white"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="300 ml"
							android:layout_alignParentEnd="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/white"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="3:30 PM (Done)"
							android:layout_alignParentStart="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/white"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="300 ml"
							android:layout_alignParentEnd="true"
							style="@style/SettingSubMenu"
							android:textColor="@android:color/white"/>
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
